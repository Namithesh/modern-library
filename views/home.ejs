<%- include('partials/header.ejs') %>

    <!-- START -->
    <div class="container" style="margin-top: 75px;">

        <div class="row">

            <div class="col-md-3 cover">            
            </div>

            <div class="col-md-6">

                <h1 class="display-3" style="text-align: center;">Search Books</h1>        

                <form action="/books/search" method="POST">
                    <input class="form-control" type="text" id="search" name="search" value="" placeholder="Search For Books" required>
                    <input class="form-control btn-outline-dark" type="submit" value="SEARCH">
                </form>

            </div>

        </div>

        <div class="row" style="margin-bottom: 25px;">
            <div class="col-md-6 cover">
                <img style="object-fit: cover;" src="/library.jpeg" width="100%" height="100%" alt="Library"/>    
            </div>

            <div class="col-md-6">
                <h1 class="display-4" style="text-align: center;">Upcoming Events</h1>        
                <% if (data.length > 0) { %>
                    <div style="overflow-x:auto; padding:0px; margin-top: 25px;">
                        <table class="table table-striped table-light">
                            <tbody>
                                <tr>
                                    <th></th>
                                    <th>Event</th>
                                </tr>
                                <% for (let i=0; i<data.length; i++) { %>
                                    <tr>
                                        <td>
                                            <%= i+1 %>
                                        </td>
                                        <td>
                                            <%=data[i].text%>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div style="padding-bottom:200px; margin-top:200px">
                        No Events.
                        <hr>
                    </div>
                <% } %>
            </div>
        </div>
            

    </div>
    <!-- END -->

<%- include('partials/footer.ejs') %>
