<%- include('partials/header.ejs') %>

    <!-- Line --><div class="main-content" style="margin-top:35px;padding-left:20px; padding-right:20px; padding-bottom:25px;">

    <div class="fluid-container p-4">
    <h1 class="display-3">View All Book Transactions</h1>

    <a class="btn btn-outline-dark" href="/book-transactions/create">Add New Book Transaction</a>

    <% if (data.length > 0) { %>
        <div style="overflow-x:auto; padding:0px; margin-top: 25px;">
            <table class="table table-striped table-light">
                <tbody>
                    <tr>
                        <th></th>
                        <th>Student Name</th>
                        <th>Roll No</th>
                        <th>Book Name</th>
                        <th>Date</th>
                    </tr>
                    <% for (let i=0; i<data.length; i++) { %>
                        <tr>
                            <td>
                                <%= i+1 %>
                            </td>
                            <td>
                                <%=data[i].name%>
                            </td>
                            <td>
                                <%=data[i].roll_no%>
                            </td>
                            <td>
                                <%=data[i].book_name%>
                            </td>
                            <td>
                                <%=data[i].date%>
                            </td>
                        </tr>
                            
                    <% } %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <div style="padding-bottom:200px; margin-top:200px">
            No Book Transactions.
            <hr>
        </div>
        <% } %>
    <!-- </div> -->

   
    </div>
    </div>

<%- include('partials/footer.ejs') %>
