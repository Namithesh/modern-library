<%- include('partials/header.ejs') %>

    <!-- Line --><div class="main-content" style="margin-top:35px;padding-left:20px; padding-right:20px; padding-bottom:25px;">

    <div class="fluid-container p-4">
    <h1 class="display-3">View All Events</h1>

    <a class="btn btn-outline-dark" href="/event/create">Add New Event</a>

    <% if (data.length > 0) { %>
        <div style="overflow-x:auto; padding:0px; margin-top: 25px;">
            <table class="table table-striped table-light">
                <tbody>
                    <tr>
                        <th></th>
                        <th>Event</th>
                        <th>Action</th>
                    </tr>
                    <% for (let i=0; i<data.length; i++) { %>
                        <tr>
                            <td>
                                <%= i+1 %>
                            </td>
                            <td>
                                <%=data[i].text%>
                            </td>
                            <td>
                                <a href="/event/delete/<%=data[i].id%>">Delete Event</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <div style="padding-bottom:200px; margin-top:200px">
            No Events.
            <hr>
        </div>
        <% } %>
    <!-- </div> -->

   
    </div>
    </div>

<%- include('partials/footer.ejs') %>
