<%- include('partials/header.ejs') %>

    <!-- START -->
    <div class="container" style="margin-top: 75px;">
        <div class="row">

            <div class="col-md-3 cover">            
            </div>

            <div class="col-md-6">
                <h1 class="display-3" style="text-align: center;">Add a Book</h1>        
            </div>  
        </div>

        <div class="row">

            <div class="col-md-3 cover">            
            </div>

            <div class="col-md-6">

                <form action="/books" method="POST" enctype="multipart/form-data">
                    <label for="book">BOOK</label><br>
                    <input class="form-control" type="file" accept="application/pdf" id="book" name="book" required><br>
                    <label for="title">TITLE</label><br>
                    <input class="form-control" type="text" id="title" name="title"><br>
                    <label for="search_keywords">Search Keywords (Seperated by space)</label><br>
                    <input class="form-control" type="text" id="search_keywords" name="search_keywords"><br>
                    <br>
                    <input class="form-control btn-outline-dark" type="submit" value="ADD BOOK">
                </form>
                
            </div>
        </div>
            

    </div>
    <!-- END -->

<%- include('partials/footer.ejs') %>
