<%- include('partials/header.ejs') %>

    <!-- Line --><div class="main-content" style="margin-top:35px;padding-left:20px; padding-right:20px; padding-bottom:25px;">

    <div class="fluid-container p-4">
    <h1 class="display-3">All Students</h1>

    <!-- <button><a href='/users/add'>Add New Student</a></button> -->
    <a class="btn btn-outline-dark" href="/users/add">Add New Student</a>

    <% if (data.length > 0) { %>
        <div style="overflow-x:auto; padding:0px; margin-top: 25px;">
            <table class="table table-striped table-light">
                <tbody>
                    <tr>
                        <th></th>
                        <th>Roll No</th>
                        <th>Name</th>
                        <th>Last Active</th>
                    </tr>
                    <% for (let i=0; i<data.length; i++) { %>
                        <tr>
                            <td>
                                <%= i+1 %>
                            </td>
                            <td>
                                <%=data[i].roll_no%>
                            </td>
                            <td>
                                <%=data[i].name%>
                            </td>
                            <td>
                                <%=data[i].last_login%>
                            </td>
                        </tr>
                            
                    <% } %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <div style="padding-bottom:600px;">
            No Students.
            <hr>
        </div>
        <% } %>
    <!-- </div> -->

   
    </div>
    </div>

